{
  "name": "fluxebu",
  "version": "0.1.0",
  "description": "An approach to flux that works for server-side (stateless) and client-side (stateful) component rendering.",
  "main": "lib",
  "scripts": {
    "test": "${MOCHA_CMD:-mocha} -R dot -r setup-referee-sinon/globals $MOCHA_ARGS test/unit",
    "test-watch": "MOCHA_ARGS=\"-w -R min $MOCHA_ARGS\" npm test",
    "coverage": "MOCHA_CMD=\"istanbul cover --hook-into-context ${ISTANBUL_ARGS:- --print detail} _mocha -- \" npm test",
    "test-coveralls": "ISTANBUL_ARGS='--report lcovonly' npm run coverage && coveralls < coverage/lcov.info",
    "lint": "jshint src test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uxebu/fluxebu.git"
  },
  "keywords": [
    "flux",
    "server",
    "browser",
    "node"
  ],
  "contributors": [
    "David Aurelio <da@uxebu.com>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/uxebu/fluxebu/issues"
  },
  "homepage": "https://github.com/uxebu/fluxebu",
  "devDependencies": {
    "mocha": "^1.21.3",
    "setup-referee-sinon": "^0.2.0",
    "istanbul": "~0.3.0",
    "jshint": "^2.5.2",
    "coveralls": "~2.11.1"
  },
  "dependencies": {
    "routes": "^1.2.0"
  }
}
